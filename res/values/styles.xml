<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light.DarkActionBar"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme.NoStatusbar" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Activities Main Theme -->
    <style name="activity_theme">
        <item name="android:background">@drawable/bg_pat</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:tileMode">repeat</item>
        <item name="android:listViewStyle">@style/transparent_list_view</item>
        <item name="android:expandableListViewStyle">@style/transparent_expandable_list_view</item>
    </style>

    <style name="logo_ribon">
        <item name="android:textColor">#33b5e5</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:background">@color/BG_TILE_BLUE_LIGHT</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="logo_title">
        <item name="android:textColor">#33b5e5</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="pager_title" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">#33b5e5</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="transparent_expandable_list_view" parent="@android:style/Widget.ExpandableListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="transparent_list_view" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="app_container" parent="">
        <item name="android:tileMode">repeat</item>
        <item name="android:listViewStyle">@style/transparent_list_view</item>
        <item name="android:expandableListViewStyle">@style/transparent_expandable_list_view</item>
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:layout_marginRight">9dp</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:background">@drawable/rectangle_radius_stroke</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="app_container_large_header" parent="app_container">
        <item name="android:paddingTop">120dp</item>
    </style>

    <style name="tile">
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginRight">4dip</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="main_menu_tile" parent="tile">
        <item name="android:background">@drawable/bg_main_screen_item</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

    <style name="main_menu_tile_top" parent="main_menu_tile">
        <item name="android:layout_marginLeft">2dip</item>
        <item name="android:layout_marginRight">2dip</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="main_menu_line">
        <item name="android:background">#e1e1e1</item>
    </style>

    <style name="home_label">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="entry_list_item">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="entry_list_item_label">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="entry_list_item_number">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">#AAAAAA</item>
    </style>

    <style name="entry_list_item_icon">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/listview_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Form Styles -->

    <style name="form_edittext"></style>

    <style name="form_textview">
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>

    <style name="form_row">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>

</resources>